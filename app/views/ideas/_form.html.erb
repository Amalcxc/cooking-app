<%= simple_form_for(@idea) do |i| %>
<%= i.error_notification %>
<div class="field">
  <div class="control">
    <%= i.input :idea, label: "write your Recipe", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new Recipe...", autofocus: true %>
  </div>
</div>
<%= i.button :submit, class: "button is-info" %>
<% end %>
