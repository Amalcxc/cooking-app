<div class="column p-0">
  
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
			
			</p>
		</figure>
		<div class="media-content">
			<%= render "ideas/form" %>
		</div>
	</article>
 
<% @ideas.each do | idea | %>
  <div class="box">
   <article class="media">
     <div class="media-left">
       <figure class="image is-64x64">
         <%= gravatar_image_tag(idea.user.email, size: 64, alt: idea.user.name) %>
       </figure>
     </div>

     <div class="media-right">
       <div class="content">
        <strong><%= idea.user.name %></strong><br />
  			<small><%= idea.user.username %></small><br/>
        <p><%= idea.idea %></p>
       </div>
       <nav class="level">
  				<div class="level-left is-mobile">
  					<%= link_to idea, class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to edit_idea_path(idea), class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to idea, method: :delete, data: { confirm: "Are you sure you want to delete this idea?" } do %>
  							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
  					<% end %>
  				</div>
  			</nav>
     </div>
   </article>
  </div>
<% end %>
</div>